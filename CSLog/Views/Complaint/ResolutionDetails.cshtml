@model IEnumerable<CSLog.Domain.Entities.vComplaintActivity>
@{ int k = 0;}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Resolution Details</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="container-fluid">
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered table-striped table-hover dataTable mt-3">
                        <thead>
                        <tr>
                            <th>S/No</th>
                                  
                            <th>
                                Solution Details
                            </th>
                            <th>
                                Resolved By
                            </th>
                            <th>
                                Resolved Date
                            </th>

                        </tr>
                        </thead>

                        <tbody>
                        @foreach (var item in Model)
                        {

                            k++;
                            <tr>
                                <td>@k</td>
                                <td>@item.SolutionDetails</td>
                                <td>@item.DisplayName</td>
                                <td>@item.Date.ToString("MMM dd, yyyy hh:mm tt")</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    @*<div id="accordianId" role="tablist" aria-multiselectable="true">
                        <div class="card">
                            @foreach (var item in Model)
                            {
                            
                                <div id="section_@item.ComplaintActivityId" class="collapse in" role="tabpanel" aria-labelledby="headerId_@item.ComplaintActivityId">
                                    <div class="card-body">
                                        <div>@item.SolutionDetails</div>

                                    </div>
                                    <div class="card-footer">
                                        <span class="pull-left">@item.DisplayName</span>
                                        <span class="pull-right">@item.Date.ToString("MMM dd, yyyy hh:mm tt")</span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>*@
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        <strong>No Resolution yet!</strong>
                    </div>
                }
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>