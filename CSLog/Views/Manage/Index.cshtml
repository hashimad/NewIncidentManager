@model IEnumerable<CSLog.Models.ApplicationUser>
@{
    ViewBag.Title = "Manage Users";
    //CSLog.Models.RegisterViewModel register = ViewBag.User;
}

<a class="btn btn-success btn-sm pull-right" href="@Url.Action("Add", "Manage")" data-modal=""><i class="fa fa-plus"></i> Add New</a>
<h4>List of users</h4>
@Html.Raw(ViewBag.Msg)
<table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th>
                Email
            </th>
            <th>
                Display Name
            </th>

            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>@item.DisplayName</td>
                    <td>
                        <div class="dropdown open pull-right">
                            <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu" aria-labelledby="triggerId">
                                <a href="@Url.Action("ResetPassword", "Manage", new { userId = item.Id } )" class="dropdown-item getr">Reset Password</a>
                                <a class="dropdown-item" href="/Manage/Edit/@item.Id" data-modal="">Edit</a>
                            </div>
                        </div>

                    </td>
                </tr>

            }
        }
    </tbody>
</table>



